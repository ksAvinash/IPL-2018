<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="2dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/search_image"
            android:layout_gravity="start|center"
            />

        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_name"
            android:textSize="20sp"
            android:layout_marginLeft="120dp"
            android:textColor="@color/colorDarkText"
            />

        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_bidding_price"
            android:textSize="16sp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30sp"
            android:textColor="#f57f17"
            />

        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/search_team_name"
            android:textColor="@color/colorDarkText"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50sp"
            android:textAllCaps="true"
            />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_gravity="top|end"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/search_overseas"
                android:layout_centerHorizontal="true"
                />
            <works.avijay.com.ipl2018.fonts.description_font
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search_overseas"
                android:id="@+id/search_country"
                android:layout_centerHorizontal="true"
                android:textSize="12sp"
                />
        </RelativeLayout>


        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="3dp"
            android:textSize="12sp"
            android:textColor="@color/playerTexts"
            android:id="@+id/search_capped"
            />


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/search_player_type"
            />

    </android.support.v7.widget.CardView>

</RelativeLayout>