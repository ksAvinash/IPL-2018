        xmlns:app="http://schemas.android.com/apk/res-auto">
        <works.avijay.com.ipl2018.fonts.scores_font
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/match_description"
            android:layout_gravity="top|center"
            android:textColor="@color/colorDarkText"
            android:textSize="26sp"
            />

        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_marginTop="25dp"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:textSize="24sp"
            android:id="@+id/current_team"
            android:textColor="@color/colorAccent"
            />

        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="start|bottom"
            android:textSize="20sp"
            android:id="@+id/current_score"
            android:textColor="@color/colorPrimaryDark"
            />
        <com.like.LikeButton
            app:icon_size="25dp"
            android:id="@+id/refresh_scores"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:anim_scale_factor="1.5"
            app:like_drawable="@drawable/refresh_active"
            app:unlike_drawable="@drawable/refresh_inactive"
            android:layout_gravity="center|end"
            android:layout_margin="15dp"
            />

