<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="works.avijay.com.ipl2018.LiveUpdatesFragment"
    android:background="@color/colorBackground"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/colorWhite"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <works.avijay.com.ipl2018.fonts.titles_font
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/match_description"
            android:layout_gravity="top|center"
            android:textColor="@color/colorDarkText"
            />

        <works.avijay.com.ipl2018.fonts.titles_font
            android:layout_marginTop="20dp"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:textSize="24sp"
            android:id="@+id/current_team"
            android:textColor="@color/colorAccent"
            />

        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="start|bottom"
            android:textSize="18sp"
            android:id="@+id/current_score"
            android:textColor="@color/colorPrimaryDark"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="84dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/colorWhite"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:text="Batting"
            android:layout_marginLeft="30dp"
            />

        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:text="R"
            android:layout_marginLeft="140dp"
            />

        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:text="B"
            android:layout_marginLeft="170dp"
            />

        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:text="4s"
            android:layout_marginLeft="200dp"
            />

        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:text="6s"
            android:layout_marginLeft="230dp"
            />

        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:text="SR"
            android:layout_marginLeft="260dp"
            />

        <View style="@style/Divider"
            android:layout_marginTop="22dp" />


        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDarkText"
            android:layout_marginTop="25dp"
            android:textSize="20sp"
            android:id="@+id/batsman1_name"
            android:layout_marginLeft="12sp"
            />
        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDarkText"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="140sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/batsman1_runs"
            />
        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDarkText"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="170sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/batsman1_balls"
            />
        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDarkText"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="200sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/batsman1_4s"
            />
        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDarkText"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="230sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/batsman1_6s"
            />
        <works.avijay.com.ipl2018.fonts.description_font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDarkText"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="260sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/batsman1_sr"
            />



        <View style="@style/Divider"
            android:layout_marginTop="48dp" />


    </android.support.v7.widget.CardView>



    <works.avijay.com.ipl2018.fonts.description_font
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorDarkText"
        android:id="@+id/result"
        android:textSize="20sp"

        />





</android.support.design.widget.CoordinatorLayout>
